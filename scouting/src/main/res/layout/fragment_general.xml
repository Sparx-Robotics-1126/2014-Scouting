<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Switch
        android:id="@+id/switchPlaysDefense"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textOff="@string/no"
        android:textOn="@string/yes"
        android:text="@string/plays_defense" />


    <TextView
        android:id="@+id/textViewPenalties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchPlaysDefense"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/number_of_penalties" />
    <org.gosparx.scouting.aerialassist.controls.HorizontalNumberPicker
        android:id="@+id/numberPickerPenalties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textViewPenalties"/>


    <TextView
        android:id="@+id/textViewPenaltyComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberPickerPenalties"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/comments_on_penalties" />
    <EditText
        android:id="@+id/editTextPenaltyComments"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPenaltyComments"
        android:inputType="textLongMessage|textMultiLine" />


    <TextView
        android:id="@+id/textViewTechnicalFouls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPenaltyComments"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/number_of_technical_fouls" />
    <org.gosparx.scouting.aerialassist.controls.HorizontalNumberPicker
        android:id="@+id/numberPickerTechnicalFouls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textViewTechnicalFouls"/>


    <TextView
        android:id="@+id/textViewTechnicalFoulComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberPickerTechnicalFouls"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/comments_on_technical_fouls" />
    <EditText
        android:id="@+id/editTextTechnicalFoulComments"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTechnicalFoulComments"
        android:inputType="textLongMessage|textMultiLine" />


    <TextView
        android:id="@+id/textViewGeneralComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTechnicalFoulComments"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/general_comments" />
    <EditText
        android:id="@+id/editTextGeneralComments"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewGeneralComments"
        android:inputType="textLongMessage|textMultiLine" />

</RelativeLayout>